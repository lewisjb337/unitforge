@inherits LayoutComponentBase

<Navbar />

@Body

<Footer></Footer>

<script>
    window.onload = function() {
        window.scrollTo(0, 0);
    };

    const links = document.querySelectorAll('a');

    links.forEach(link => {
        link.addEventListener('click', function() {
            window.scrollTo(0, 0);
        });
    });
</script>